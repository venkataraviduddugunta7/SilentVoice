{
  "name": "silent-voice",
  "version": "1.0.0",
  "description": "Real-time bidirectional sign language translator",
  "private": true,
  "scripts": {
    "dev": "./start.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && source venv/bin/activate && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build:frontend": "cd frontend && npm run build",
    "install:frontend": "cd frontend && npm install --legacy-peer-deps",
    "install:backend": "cd backend && ./setup_venv.sh",
    "setup": "npm run install:backend && npm run install:frontend",
    "clean": "rm -rf frontend/node_modules frontend/.next backend/venv backend/__pycache__"
  },
  "keywords": [
    "sign-language",
    "translation",
    "real-time",
    "mediapipe",
    "fastapi",
    "nextjs",
    "hackathon"
  ],
  "author": "SilentVoice Team",
  "license": "MIT",
  "workspaces": [
    "frontend"
  ]
}
